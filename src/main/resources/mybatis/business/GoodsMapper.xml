<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.information.project.business.goods.mapper.GoodsMapper">
    
    <resultMap type="Goods" id="GoodsResult">
        <result property="id"    column="id"    />
        <result property="categoryId"    column="category_id"    />
        <result property="categoryName"    column="category_name"    />
        <result property="merchantId"    column="merchant_id"    />
        <result property="code"    column="code"    />
        <result property="name"    column="name"    />
        <result property="price"    column="price"    />
        <result property="orderNum"    column="order_num"    />
        <result property="image"    column="image"    />
        <result property="visible"    column="visible"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
	
	<sql id="selectGoodsVo">
        select id, category_id, merchant_id, code, name, price, order_num, image, visible, status , remark , create_time, update_time  from bus_goods
    </sql>
	
    <select id="selectGoodsList" parameterType="Goods" resultMap="GoodsResult">
        <include refid="selectGoodsVo"/>
        <where>  
            <if test="id != null and id != ''"> and id = #{id}</if>
             <if test="categoryId != null and categoryId != ''"> and category_id = #{categoryId}</if>
             <if test="merchantId != null and merchantId != ''"> and merchant_id = #{merchantId}</if>
             <if test="code != null and code != ''"> and code = #{code}</if>
             <if test="name != null and name != ''"> and name like  concat('%', #{name}, '%') </if>
             <if test="searchValue != null and searchValue != ''"> and name like  concat('%', #{searchValue}, '%') </if>
             <if test="price != null and price != ''"> and price = #{price}</if>
             <if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum}</if>
             <if test="image != null and image != ''"> and image = #{image}</if>
             <if test="visible != null and visible != ''"> and visible = #{visible}</if>
             <if test="status != null and status != ''"> and status = #{status}</if>
             <if test="remark != null and remark != ''"> and remark = #{remark}</if>
            <if test="createTime != null and createTime != ''"> and create_time = #{createTime}</if>
            <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime}</if>
        </where>
    </select>
    
    <select id="selectGoodsById" parameterType="Long" resultMap="GoodsResult">
        select t.id, t.category_id, t.merchant_id, t.code, t.name, t.price, t.order_num, t.image, t.visible, t.status , t.remark , t.create_time, t.update_time ,
        (select category_name from bus_good_category where id = t.category_id) category_name
        from bus_goods t
        where id = #{id}
    </select>
        
    <insert id="insertGoods" parameterType="Goods">
        insert into bus_goods
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != '' ">id,</if>
			<if test="categoryId != null and categoryId != '' ">category_id,</if>
			<if test="merchantId != null and merchantId != '' ">merchant_id,</if>
			<if test="code != null and code != '' ">code,</if>
			<if test="name != null and name != '' ">name,</if>
			<if test="price != null and price != '' ">price,</if>
			<if test="orderNum != null and orderNum != '' ">order_num,</if>
			<if test="image != null and image != '' ">image,</if>
			<if test="visible != null and visible != '' ">visible,</if>
			<if test="status != null and status != '' ">status,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">#{id},</if>
			<if test="categoryId != null and categoryId != ''">#{categoryId},</if>
			<if test="merchantId != null and merchantId != ''">#{merchantId},</if>
			<if test="code != null and code != ''">#{code},</if>
			<if test="name != null and name != ''">#{name},</if>
			<if test="price != null and price != ''">#{price},</if>
			<if test="orderNum != null and orderNum != ''">#{orderNum},</if>
			<if test="image != null and image != ''">#{image},</if>
			<if test="visible != null and visible != ''">#{visible},</if>
			<if test="status != null and status != ''">#{status},</if>
            sysdate()
         </trim>
    </insert>
	 
    <update id="updateGoods" parameterType="Goods">
        update bus_goods
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryId != null  ">category_id = #{categoryId},</if>
            <if test="merchantId != null  ">merchant_id = #{merchantId},</if>
            <if test="code != null  and code != ''  ">code = #{code},</if>
            <if test="name != null  and name != ''  ">name = #{name},</if>
            <if test="price != null  ">price = #{price},</if>
            <if test="orderNum != null  ">order_num = #{orderNum},</if>
            <if test="image != null  and image != ''  ">image = #{image},</if>
            <if test="visible != null  and visible != ''  ">visible = #{visible},</if>
            <if test="status != null  and status != ''  ">status = #{status},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteGoodsById" parameterType="Long">
        delete from bus_goods where id = #{id}
    </delete>
	
    <delete id="deleteGoodsByIds" parameterType="String">
        delete from bus_goods where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>