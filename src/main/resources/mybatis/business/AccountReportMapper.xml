<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.business.accountReport.mapper.AccountReportMapper">
    
    <resultMap type="AccountReport" id="AccountReportResult">
        <result property="id"    column="id"    />
        <result property="reportDate"    column="report_date"    />
        <result property="accountCode"    column="account_code"    />
        <result property="incomeNum"    column="income_num"    />
        <result property="incomeSum"    column="income_sum"    />
        <result property="outcomeNum"    column="outcome_num"    />
        <result property="outcomeSum"    column="outcome_sum"    />
        <result property="remark"    column="remark"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
	
	<sql id="selectAccountReportVo">
        select id, report_date, account_code, income_num, income_sum, outcome_num, outcome_sum, remark, status, create_time, update_time ,remark,create_time,update_time from bus_account_report
    </sql>
	
    <select id="selectAccountReportList" parameterType="AccountReport" resultMap="AccountReportResult">
        <include refid="selectAccountReportVo"/>
        <where>  
            <if test="id != null and id != ''"> and id = #{id}</if>
             <if test="reportDate != null and reportDate != ''"> and report_date = #{reportDate}</if>
             <if test="accountCode != null and accountCode != ''"> and account_code = #{accountCode}</if>
             <if test="incomeNum != null and incomeNum != ''"> and income_num = #{incomeNum}</if>
             <if test="incomeSum != null and incomeSum != ''"> and income_sum = #{incomeSum}</if>
             <if test="outcomeNum != null and outcomeNum != ''"> and outcome_num = #{outcomeNum}</if>
             <if test="outcomeSum != null and outcomeSum != ''"> and outcome_sum = #{outcomeSum}</if>
             <if test="remark != null and remark != ''"> and remark = #{remark}</if>
             <if test="status != null and status != ''"> and status = #{status}</if>
             <if test="createTime != null and createTime != ''"> and create_time = #{createTime}</if>
             <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime}</if>
             <if test="remark != null and remark != ''"> and remark = #{remark}</if>
            <if test="createTime != null and createTime != ''"> and create_time = #{createTime}</if>
            <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime}</if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(report_date,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(report_date,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>
    
    <select id="selectAccountReportById" parameterType="Long" resultMap="AccountReportResult">
        <include refid="selectAccountReportVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAccountReport" parameterType="AccountReport">
        insert into bus_account_report
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != '' ">id,</if>
			<if test="reportDate != null and reportDate != '' ">report_date,</if>
			<if test="accountCode != null and accountCode != '' ">account_code,</if>
			<if test="incomeNum != null and incomeNum != '' ">income_num,</if>
			<if test="incomeSum != null and incomeSum != '' ">income_sum,</if>
			<if test="outcomeNum != null and outcomeNum != '' ">outcome_num,</if>
			<if test="outcomeSum != null and outcomeSum != '' ">outcome_sum,</if>
			<if test="remark != null and remark != '' ">remark,</if>
			<if test="status != null and status != '' ">status,</if>
			<if test="createTime != null and createTime != '' ">create_time,</if>
			<if test="updateTime != null and updateTime != '' ">update_time,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">#{id},</if>
			<if test="reportDate != null and reportDate != ''">#{reportDate},</if>
			<if test="accountCode != null and accountCode != ''">#{accountCode},</if>
			<if test="incomeNum != null and incomeNum != ''">#{incomeNum},</if>
			<if test="incomeSum != null and incomeSum != ''">#{incomeSum},</if>
			<if test="outcomeNum != null and outcomeNum != ''">#{outcomeNum},</if>
			<if test="outcomeSum != null and outcomeSum != ''">#{outcomeSum},</if>
			<if test="remark != null and remark != ''">#{remark},</if>
			<if test="status != null and status != ''">#{status},</if>
			<if test="createTime != null and createTime != ''">#{createTime},</if>
			<if test="updateTime != null and updateTime != ''">#{updateTime},</if>
            sysdate()
         </trim>
    </insert>
	 
    <update id="updateAccountReport" parameterType="AccountReport">
        update bus_account_report
        <trim prefix="SET" suffixOverrides=",">
            <if test="reportDate != null  ">report_date = #{reportDate},</if>
            <if test="accountCode != null  and accountCode != ''  ">account_code = #{accountCode},</if>
            <if test="incomeNum != null  ">income_num = #{incomeNum},</if>
            <if test="incomeSum != null  ">income_sum = #{incomeSum},</if>
            <if test="outcomeNum != null  ">outcome_num = #{outcomeNum},</if>
            <if test="outcomeSum != null  ">outcome_sum = #{outcomeSum},</if>
            <if test="remark != null  and remark != ''  ">remark = #{remark},</if>
            <if test="status != null  and status != ''  ">status = #{status},</if>
            <if test="createTime != null  ">create_time = #{createTime},</if>
            <if test="updateTime != null  ">update_time = #{updateTime},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteAccountReportById" parameterType="Long">
        delete from bus_account_report where id = #{id}
    </delete>
	
    <delete id="deleteAccountReportByIds" parameterType="String">
        delete from bus_account_report where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>