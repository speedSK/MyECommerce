<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.information.project.business.goodCategory.mapper.GoodCategoryMapper">
    
    <resultMap type="GoodCategory" id="GoodCategoryResult">
        <result property="id"    column="id"    />
        <result property="categoryCode"    column="category_code"    />
        <result property="categoryName"    column="category_name"    />
        <result property="parentId"    column="parent_id"    />
        <result property="orderNum"    column="order_num"    />
        <result property="icon"    column="icon"    />
        <result property="visible"    column="visible"    />
        <result property="status"    column="status"    />
        <result property="des"    column="des"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>
	
	<sql id="selectGoodCategoryVo">
        select id, category_code, category_name, parent_id, order_num, icon, visible, status, des , create_time, update_time  from bus_good_category
    </sql>
	
    <select id="selectGoodCategoryList" parameterType="GoodCategory" resultMap="GoodCategoryResult">
        <include refid="selectGoodCategoryVo"/>
        <where>  
            <if test="id != null and id != ''"> and id = #{id}</if>
             <if test="categoryCode != null and categoryCode != ''"> and category_code = #{categoryCode}</if>
             <if test="categoryName != null and categoryName != ''"> and category_name = #{categoryName}</if>
             <if test="parentId != null and parentId != ''"> and parent_id = #{parentId}</if>
             <if test="orderNum != null and orderNum != ''"> and order_num = #{orderNum}</if>
             <if test="icon != null and icon != ''"> and icon = #{icon}</if>
             <if test="visible != null and visible != ''"> and visible = #{visible}</if>
             <if test="status != null and status != ''"> and status = #{status}</if>
             <if test="des != null and des != ''"> and des = #{des}</if>
             <if test="createTime != null and createTime != ''"> and create_time = #{createTime}</if>
             <if test="updateTime != null and updateTime != ''"> and update_time = #{updateTime}</if>
         </where>
    </select>
    
    <select id="selectGoodCategoryById" parameterType="Long" resultMap="GoodCategoryResult">
        <include refid="selectGoodCategoryVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertGoodCategory" parameterType="GoodCategory">
        insert into bus_good_category
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null and id != '' ">id,</if>
			<if test="categoryCode != null and categoryCode != '' ">category_code,</if>
			<if test="categoryName != null and categoryName != '' ">category_name,</if>
			<if test="parentId != null and parentId != '' ">parent_id,</if>
			<if test="orderNum != null and orderNum != '' ">order_num,</if>
			<if test="icon != null and icon != '' ">icon,</if>
			<if test="visible != null and visible != '' ">visible,</if>
			<if test="status != null and status != '' ">status,</if>
			<if test="des != null and des != '' ">des,</if>
            create_time
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null and id != ''">#{id},</if>
			<if test="categoryCode != null and categoryCode != ''">#{categoryCode},</if>
			<if test="categoryName != null and categoryName != ''">#{categoryName},</if>
			<if test="parentId != null and parentId != ''">#{parentId},</if>
			<if test="orderNum != null and orderNum != ''">#{orderNum},</if>
			<if test="icon != null and icon != ''">#{icon},</if>
			<if test="visible != null and visible != ''">#{visible},</if>
			<if test="status != null and status != ''">#{status},</if>
			<if test="des != null and des != ''">#{des},</if>
            sysdate()
         </trim>
    </insert>
	 
    <update id="updateGoodCategory" parameterType="GoodCategory">
        update bus_good_category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryCode != null  and categoryCode != ''  ">category_code = #{categoryCode},</if>
            <if test="categoryName != null  and categoryName != ''  ">category_name = #{categoryName},</if>
            <if test="parentId != null  ">parent_id = #{parentId},</if>
            <if test="orderNum != null  ">order_num = #{orderNum},</if>
            <if test="icon != null  and icon != ''  ">icon = #{icon},</if>
            <if test="visible != null  and visible != ''  ">visible = #{visible},</if>
            <if test="status != null  and status != ''  ">status = #{status},</if>
            <if test="des != null  and des != ''  ">des = #{des},</if>
            update_time = sysdate()
        </trim>
        where id = #{id}
    </update>

	<delete id="deleteGoodCategoryById" parameterType="Long">
        delete from bus_good_category where id = #{id}
    </delete>
	
    <delete id="deleteGoodCategoryByIds" parameterType="String">
        delete from bus_good_category where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>


    <select id="selectCountGoodCategoryByParentId" resultType="Integer">
        select count(*) from bus_good_category where parent_id=#{parentId}
    </select>

    <select id="selectGoodCategoryAll" resultMap="GoodCategoryResult">
        <include refid="selectGoodCategoryVo"/>
    </select>

    <select id="checkGoodCategoryNameUnique" parameterType="String" resultMap="GoodCategoryResult">
        <include refid="selectGoodCategoryVo"/>
        where category_name=#{categoryName}
    </select>

</mapper>